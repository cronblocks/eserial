<Page
    x:Class="ESerial.App.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ESerial.App.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Rows and Columns Definition -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="30" MaxHeight="50" />
            <RowDefinition Height="8*" MinHeight="200" />
            <RowDefinition Height="1*" MinHeight="30" MaxHeight="40" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200" MaxWidth="250" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Left Options Bar -->
        <StackPanel x:Name="LeftOptionsPanel"
            Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="3,3,0,3" Background="#FFFDFAFF" FocusVisualPrimaryBrush="{x:Null}" />

        <!-- Top Options Bar -->
        <StackPanel x:Name="TopOptionsPanel"
            Grid.Row="0" Grid.Column="1" Margin="0,3,3,0" Background="#FFFDFAFF" FocusVisualPrimaryBrush="{x:Null}" Padding="3,0,0,0" />

        <!-- Main Text Area -->
        <Grid x:Name="MainTextPanel" Grid.Row="1" Grid.Column="1" Margin="3,3,3,3">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="50" MinHeight="45"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TransmitTextBox" TextWrapping="NoWrap" Text="" PlaceholderText="Transmission Data" HorizontalContentAlignment="Left" FontFamily="Lucida Sans Typewriter" CornerRadius="3,3,3,3" HorizontalTextAlignment="Left" VerticalContentAlignment="Stretch" BorderBrush="#661D14D7" FocusVisualPrimaryBrush="#FF3A178A" FocusVisualSecondaryBrush="#99170A44" Foreground="#FF737C09" SelectionHighlightColor="#FFAC1F1A" SelectionHighlightColorWhenNotFocused="#FFFFAAAA" Margin="0,0,3,3" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                <Button x:Name="TransmitButton" Content="Send" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3,0,0,3" FontSize="12"/>
                <Button x:Name="TransmitFileButton" Content="Send File" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3,0,0,3" FontSize="12"/>
            </Grid>
            <TextBox x:Name="MainTextBox" TextWrapping="Wrap" Text="" FontFamily="Lucida Console" Foreground="#FF222222" Background="#66EDE9AD" HorizontalContentAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Auto" VerticalContentAlignment="Top" BorderBrush="White" SelectionHighlightColor="#FFC96F20" SelectionHighlightColorWhenNotFocused="#FFF7AC6A" FontSize="14" FocusVisualPrimaryBrush="White" CornerRadius="3,3,3,3" FocusVisualPrimaryThickness="1,1,1,1" AllowFocusOnInteraction="True" IsReadOnly="True" Margin="0,3,0,0" Grid.Row="1" FocusVisualSecondaryBrush="White" PlaceholderText="Received Data" BorderThickness="1,1,1,1" />
        </Grid>
        <!-- Bottom Messages Bar -->
        <TextBlock x:Name="MessageTextBlock" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="123" FocusVisualPrimaryBrush="{x:Null}" Foreground="#FF220021" FontSize="12" Margin="3,3,3,3" VerticalAlignment="Center" FontWeight="Bold"/>

    </Grid>
</Page>
